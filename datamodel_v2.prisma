datasource chinook {
  provider = "mongodb"
  url      = "mongodb://prisma:prisma@127.0.0.1:27017/testdb?authSource=admin"
}

model User {
  id    String @id @default(dbgenerated()) @map("_id")
  name  String
  age   Int?
  posts Post[]
}

model Post {
  id        Int      @id @map("_id")
  title     String
  author_id String
  author    User     @relation(fields: [author_id], references: [id])
  createdAt DateTime @default(now())
}
